# Docker Environment Variables Example
# Copy this file to .env and customize for your deployment

# Server Configuration
DOMAIN_OR_IP=localhost
# Examples:
# DOMAIN_OR_IP=192.168.1.100
# DOMAIN_OR_IP=yourdomain.com
# DOMAIN_OR_IP=portal.yourdomain.com

# Database Configuration
DB_PASSWORD=workernet123
POSTGRES_DB=workernet
POSTGRES_USER=workernet

# Redis Configuration
REDIS_PASSWORD=redis123

# Django Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=False
ALLOWED_HOSTS_EXTRA=

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
